\begin{tabular}{l l}
    \includegraphics[scale=0.29]{../outputs/publication/figures/hcg90_velocity_ra.pdf} &
    \includegraphics[scale=0.29]{../outputs/publication/figures/hcg90_noise_specaxis.pdf}
  \end{tabular}
  \caption{Noise as a function of velocities for the non-primary beam corrected \SI{60}{\arcsecond} data cube of
  HCG 90. The horizontal dashed line indicates the median noise value.}
  \label{fig:hcg90_noise}
 \end{figure*}
%
 \begin{figure}
\begin{tabular}{l}
    \includegraphics[scale=0.29]{../outputs/publication/figures/hcg90_global_profile.pdf}
  \end{tabular}
  \caption{Integrated spectra of HCG 90. The spectrum has been extracted from area containing only genuine \HI\ emission.}
  \label{fig:hcg90_global_prof}
 \end{figure}

