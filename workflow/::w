   \title{MeerKAT HI observations of Hickson Compact Groups}

   \subtitle{Survey description and data release}

   \author{AMIGA author-1
          \inst{1}
          \and
          AMIGA author-2 \inst{2}\fnmsep\thanks{Just to show the usage
          of the elements in the author field}
          }

   \institute{Institute for Astronomy (IfA), University of Vienna,
              T\"urkenschanzstrasse 17, A-1180 Vienna\\
              \email{wuchterl@amok.ast.univie.ac.at}
         \and
